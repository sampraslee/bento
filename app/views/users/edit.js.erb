// Ajax to change the programming_level enum value of a particular user 
  $("#beginner").click((e) => {
    e.preventDefault()
    $.ajax({
        url: "/user/<%= current_user.id %>/level",
        method: "POST",
        dataType: "JSON",
        data: {level: 0},
        success: (data) => {
            console.log(data)
            $('#beginner').addClass('active');
            $('#intermediate').removeClass('active');
        }
    })
})
$("#intermediate").click((e) => {
    e.preventDefault()
    $.ajax({
        url: "/user/<%= current_user.id %>/level",
        method: "POST",
        dataType: "JSON",
        data: {level: 1},
        success: (data) => {
            console.log(data)
            $('#intermediate').addClass('active');
            $('#beginner').removeClass('active');
        }
    })
})