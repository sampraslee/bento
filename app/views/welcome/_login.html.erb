
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Log in into Bento</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

        <div class="modal-body ">
          <%= form_for :session, url: session_path, html: {class: 'form-inline'} do |form| %>
            <div class="text-field form-group">
              <%= form.text_field :email, type: 'email', class:'form-control mb-2 mr-sm-2', placeholder:'Email'%>
            </div>

            <div class="password-field form-group">
              <%= form.password_field :password, class:'form-control mb-2 mr-sm-2', placeholder:'Password'%>
            </div>

            <div class="form-group">
              <%= form.submit class:'btn btn-outline-primary mb-2 mr-sm-2' %>
              <%= link_to t(".forgot_password"), new_password_path, class:'btn btn-outline-danger mb-2 mr-sm-2' %>
            </div>
          <% end %>

      </div>
    </div>
  </div>
</div>









