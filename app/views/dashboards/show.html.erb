<div class="all articles">
	<h1>All YOUR Articles</h1>
	<% random_article = @user.user_article.sample %>
	<% random_article_info = LinkThumbnailer.generate(random_article.link) %>
	<% random_podcast = @user.user_podcast.sample %>
	<% random_podcast_info = LinkThumbnailer.generate(random_podcast.link) %>

</div>

<div class="container text-center">
	<h3>Week 1</h3>
	<div class="d-inline-flex flex-wrap justify-content-center">
		<div class="card rounded shadow-lg m-2" style="width: 14.5rem;">
		  
		  <div class="card-body" style="display: flex; flex-direction: column; justify-content: space-between; align-items: center;">
		  	
		<%# ––––––––– Article –––––––––– %>
			<h5 class="card-title">Article</h5>
			<%# Article thumbnail %>
		    <div class="container-image d-flex align-items-center">
		    	<img src="<%= random_article_info.images.first.src.to_s %>" class="image card-img-top" alt="...">
			</div>
			<%# Article details %>
			<div class="card-text">
					<%# Article headline %>
			    <p class="card-text mt-2 font-weight-bolder"><%=random_article.title%></p>
					<%# Article link %>
			    <a href="<%=random_article.link%>" data-check="card-first" target="_blank" class="card-link btn btn-primary rounded w-80">Go to Article</a>
			    <img src="https://previews.123rf.com/images/johan2011/johan20111309/johan2011130900007/21934213-ok-the-dude-giving-thumb-up-next-to-a-check-mark-blue.jpg" width="30" height="30" id="card-first"class="check d-none">
			</div>
		  </div>
		</div>
		<%# ––––––––– Video/Podcast –––––––––– %>
		<div class="card rounded shadow-lg m-2" style="width: 14.5rem;">
		  
		  <div class="card-body">
		    <h5 class="card-title">Podcast</h5>
				<%# Podcast thumbnail %>
				<div class="container-image d-flex align-items-center">
		    	<img src="<%= random_podcast_info.images.first.src.to_s %>" class="image card-img-top" alt="...">
				</div>
				<%# Podcast headline %>
		    <p class="card-text mt-2 font-weight-bolder"><%=random_podcast.creator%></p>
				<%# Podcast link %>
		    <a href="<%=random_podcast.link%>" data-check="card-second" target="_blank" class="card-link btn btn-primary rounded w-80">Go to Podcast</a>
		    <img src="https://previews.123rf.com/images/johan2011/johan20111309/johan2011130900007/21934213-ok-the-dude-giving-thumb-up-next-to-a-check-mark-blue.jpg" width="30" height="30" id="card-second"class="check d-none">
		  </div>
		</div>

		<div class="card rounded shadow-lg m-2" style="width: 14.5rem;">
		  
		  <div class="card-body">
		  	
		    <h5 class="card-title">Tutorial</h5>
		    <img src="https://koenig-media.raywenderlich.com/uploads/2018/06/TextRecognitionMLKit-feature.png" class="image card-img-top mb-2" alt="...">
		    <p class="card-text mt-2">From Ruby to Python - CHANGE</p>
		    <p>Let's begin</p>
		    <a href="https://www.raywenderlich.com/5804-text-recognition-with-ml-kit" data-check="card-third" target="_blank" class="card-link btn btn-primary rounded w-80">Go to Tutorial</a>
		    <img src="https://previews.123rf.com/images/johan2011/johan20111309/johan2011130900007/21934213-ok-the-dude-giving-thumb-up-next-to-a-check-mark-blue.jpg" width="30" height="30" id="card-third" class="check d-none">
		  </div>
		</div>

		<div class="card rounded shadow-lg m-2" style="width: 14.5rem;">
		  
		  <div class="card-body">
		  	
		    <h5 class="card-title">Challenge</h5>
		    <img src="https://cdn-images.threadless.com/threadless-media/artist_shops/shops/ChallengeMania/products/442827/shirt-1519171642-351d8aab0f64da13e58fbf1e622d966d.png?v=3&" class="image card-img-top mb-2" alt="...">
		    <p class="card-text mt-2">From Ruby to Python - CHANGE</p>
		    <p>Let's begin</p>
		    <a href="https://www.codewars.com/kata/you-only-need-one-beginner" data-check="card-last" target="_blank" class="card-link btn btn-primary rounded w-80">Go to Challenge!</a>
		    <img src="https://previews.123rf.com/images/johan2011/johan20111309/johan2011130900007/21934213-ok-the-dude-giving-thumb-up-next-to-a-check-mark-blue.jpg" width="30" height="30" id="card-last" class="check d-none">
		  </div>
		</div>
	</div>
</div>

<script>
	$(".card-link").click(function (e){
		$("#" + e.target.dataset.check).removeClass("d-none")
	})

</script>
